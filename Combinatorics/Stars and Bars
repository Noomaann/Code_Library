#define fastio ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

/*
    Stars and Bars:
    ≥0 object per box → (n+k-1 / k-1)
    ≥1 object per box → (n-1 / k-1)
*/
 
const int N = 2e6 + 3;
ll a[N];
 
void pre() {
    a[0] = 1;
    ll fact = 1;
    for (ll i = 1; i < N; i++) {
        fact = (fact * i) % MOD;
        a[i] = fact % MOD;
    }
}
 
ll expo(ll base, ll pow) {
    base = base % MOD;
    ll res = 1;
    while (pow) {
        if (pow & 1) {
            res = res * base % MOD;
        }
        base = base * base % MOD;
        pow >>= 1;
    }
    return res % MOD;
}
 
void solve() {
    ll chil, app;
    cin >> chil >> app;
    ll x = (chil + app - 1);
    ll y = chil - 1;
    ll fx = a[x];
    ll fy = a[y];
    ll fxy = a[(x - y)];
 
    ll ans = expo(fy, MOD - 2);
    ll ans1 = expo(fxy, MOD - 2);
 
    ll ans2 = (ans * ans1) % MOD;
    cout << (ans2 * fx) % MOD;
}
 
 
 
int32_t main() {
    fastio;
#ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
#endif
 
    int t = 1;
    //cin >> t;
    pre();
 
    while (t--) {
        solve();
    }
    return 0;
}
